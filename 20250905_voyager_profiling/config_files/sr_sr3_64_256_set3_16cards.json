{
    "name": "sr_pysm",
    "phase": "train", // train or val
    "gpu_ids": [
        0
    ],
    "path": { //set the path
        "log": "/scratch/results/sr3_pysm/256_set1/b/logs",
        "tb_logger": "/scratch/results/sr3_pysm/256_set1/b/tb_logger",
        "results": "/scratch/results/sr3_pysm/256_set1/b/results",
        "checkpoint": "/scratch/results/sr3_pysm/256_set1/b/checkpoint",
        "resume_state": null
        // "resume_state": "experiments/sr_ffhq_210806_204158/checkpoint/I640000_E37" //pretrain model or training state
    },
    "datasets": {
        "train": {
            "name": "256_set3",
            "mode": "HR", // whether need LR img
            "dataroot": "/ceph/datasets/pysm_realiz/256_set3_64_256",
            "datatype": "lmdb", //lmdb or img, path of img files
            "l_resolution": 64, // low resolution need to super_resolution
            "r_resolution": 256, // high resolution
            "batch_size": 4,
            "num_workers": 8,
            "use_shuffle": true,
	    "gray_scale": true, //for gray scale images, should be the same in val
            "data_len": -1 // -1 represents all data used in train
        },
        "val": {
            "name": "256_set3_test",
            "mode": "LRHR",
            "dataroot": "/ceph/datasets/pysm_realiz/256_set3_test_64_256",
            "datatype": "lmdb", //lmdb or img, path of img files
            "l_resolution": 64,
            "r_resolution": 256,
	    "gray_scale": true,
            "data_len": 5 // data length in validation 
        }
    },
    "model": {
        "which_model_G": "sr3", // use the ddpm or sr3 network structure
        "finetune_norm": false,
        "unet": {
            "in_channel": 2,
            "out_channel": 1,
            "inner_channel": 128,
            "channel_multiplier": [
                1,
                2,
                4,
		4,
                8,
                8
            ],
            "attn_res": [
                16
            ],
            "res_blocks": 3,
            "dropout": 0.2
        },
        "beta_schedule": { // use munual beta_schedule for acceleration
            "train": {
                "schedule": "linear",
                "n_timestep": 2000,
                "linear_start": 1e-6,
                "linear_end": 1e-2
            },
            "val": {
                "schedule": "linear",
                "n_timestep": 2000,
                "linear_start": 1e-6,
                "linear_end": 1e-2
            }
        },
        "diffusion": {
            "image_size": 128,
            "channels": 3, //sample channel
            "conditional": true // unconditional generation or unconditional generation(super_resolution)
        }
    },
    "train": {
        "n_iter": 6e1, //1000000
        "val_freq": 1e4, //1e4,
        "save_checkpoint_freq": 1e4,
        "print_freq": 1e1,
        "optimizer": {
            "type": "adam",
            "lr": 2e-5
        },
        "ema_scheduler": { // not used now
            "step_start_ema": 5000,
            "update_ema_every": 1,
            "ema_decay": 0.9999
        }
    },
    "wandb": {
        "project": "sr_pysm"
    }
}
